<script type="text/javascript">		
	

	$(function(){

		var intlength=$('.services .col-md-3 img').length;
		var index=0;
		var intv = setInterval(function(){

			if(index>intlength){ clearInterval(intv)}
				else{
					$('.services .col-md-3 img:eq('+index+')').attr('class','animated flipInY');
					index +=1;
				}

			},200)

	});




</script>
